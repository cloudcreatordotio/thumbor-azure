# Local Development Environment Variables for Docker Compose
# Copy this to .env and customize for your local environment

# Port Configuration
THUMBOR_LISTEN_PORT=8080

# Security (Use unsafe URLs for local development only!)
SECURITY_KEY=LOCAL_DEV_KEY_NOT_FOR_PRODUCTION
ALLOW_UNSAFE_URL=True

# Process Configuration
THUMBOR_NUM_PROCESSES=4

# CORS
CORS_ALLOW_ORIGIN=*

# Image Format Settings
AUTO_WEBP=True
AUTO_PNG_TO_JPG=False
WEBP_QUALITY=80
QUALITY=80

# Cache Configuration (reduced for local development)
THUMBOR_PROXY_CACHE_SIZE=10g
THUMBOR_PROXY_CACHE_MEMORY_SIZE=512m
THUMBOR_PROXY_CACHE_INACTIVE=256m
THUMBOR_PROXY_CACHE_DURATION=1m

# HTTP Loader Settings
HTTP_LOADER_FORWARD_USER_AGENT=True
HTTP_LOADER_TIMEOUT=60
HTTP_LOADER_MAX_REDIRECTS=5

# Storage Settings
STORAGE_EXPIRATION_SECONDS=2592000
RESULT_STORAGE_EXPIRATION_SECONDS=0

# Upload Settings
UPLOAD_ENABLED=True
UPLOAD_DELETE_ALLOWED=False

# Image Processing Limits
MAX_WIDTH=3000
MAX_HEIGHT=3000
MIN_WIDTH=1
MIN_HEIGHT=1

# Performance Settings
ENGINE_THREADPOOL_SIZE=10
HTTP_LOADER_MAX_CONN_PER_HOST=30

# Logging
LOG_LEVEL=DEBUG

# Error Tracking (Optional - leave empty for local dev)
SENTRY_DSN_URL=

# SSH Debugging (not recommended, even for local)
ENABLE_SSH=false

# Feature Flags
PRESERVE_EXIF_INFO=True
RESPECT_ORIENTATION=True
PROGRESSIVE_JPEG=True
ENABLE_ETAGS=True

# Detection
USE_FACE_DETECTION=True
USE_FEATURE_DETECTION=True
USE_QUEUED_DETECTOR=True

# Metrics
METRICS_ENABLED=True